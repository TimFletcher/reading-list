{
  "manifest_version": 2,

  "name": "Today I Read",
  "description": "This extension collects the articles you've read for the day",
  "version": "1.0",

  "browser_action": {
    "default_icon": "books.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "history",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["dist/content.js"], //adding lib/ramda.min.js here did nothing, had to add it to popup.html
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["lib/ramda.min.js", "background.js"]
  }
}
